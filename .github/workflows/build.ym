name: Build Bigfoot EXE

on:
  push:
    branches: [ main, master ]
  workflow_dispatch:

jobs:
  build:
    runs-on: windows-latest

    steps:
    - name: Checkout Code
      uses: actions/checkout@v4

    - name: Set up Python
      uses: actions/setup-python@v5
      with:
        python-version: '3.10'

    - name: Install Dependencies
      run: |
        python -m pip install --upgrade pip
        # 根据 backend.py 的需求安装所有库
        pip install httpx aiofiles colorlog ujson vdf colorama pyinstaller

    - name: Build EXE with PyInstaller
      run: |
        # 确保入口文件名正确
        pyinstaller --onefile --name "Bigfoot_Tool" frontend_cli.py

    - name: Upload Finished EXE
      uses: actions/upload-artifact@v4
      with:
        name: Bigfoot_Release
        path: dist/Bigfoot_Tool.exe
